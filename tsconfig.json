{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks":false,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
                "@/*": ["./src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "config",
        "webpack.common.js",
        "webpack.dev.js",
        "webpack.prod.js",
        ".eslintrc.js"
    ],
    "include": [ 
          "src"
    ]
}